@using System.Globalization
@{
    ViewData["Title"] = "Payment";
}

<div class="container">
<h3 class="mt-4 mb-4">Payment checkout</h3>
    <div class="row">
        <div class="col-md-4">
            <div class="card border border-secondary">
                <div class="card-body">
                    <h5 class="card-title">Payment options</h5>
                    <div>
                        <label for="credit-card">Pay by card </label>
                        <input type="checkbox" id="credit-card">
                    </div>
                    <form id="checkout-form" method="post" action="/Order/Confirmation">
                        <div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border border-secondary">
                <div class="card-body">
                    <h5 class="card-title">Total</h5>
                    <p class="card-text">
                        <span class="mr-auto">Total Price: @((@ViewBag.TotalPrice).ToString("C2", new CultureInfo("en-US")))</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
